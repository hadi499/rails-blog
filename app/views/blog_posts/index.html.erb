<div class="w-[400px] mx-auto mt-8">
  <% @blog_posts.each do |blog_post|%>
    <h4 class="text-xl font-bold my-3"><%= link_to blog_post.title, blog_post %></h4>
    <p><%= blog_post.body%></p>
    <div>
      <% if blog_post.image.present? %>
        <%= image_tag blog_post.image %>
      </div>
    <%end%>
  <%end%>
</div>
