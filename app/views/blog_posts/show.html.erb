<div class="w-[400px] mx-auto mt-8">
  <h2 class="text-xl font-bold my-3"><%=  @blog_post.title %></h2>
  <p><%= @blog_post.body %></p>
  <div>
    <% if @blog_post.image.present? %>
      <%= image_tag @blog_post.image %>
    <% end %>
  </div>
  <div class="flex flex-col space-y-3 mt-3 ">
    <%= link_to "Edit", edit_blog_post_path(@blog_post), class: "bg-blue-300 text-center py-2 w-1/3" if user_signed_in? %>
    <a href="/" class="bg-red-300 text-center py-2 w-1/3">back</a>
  </div>
</div>
